---
import '../../styles/global.css';
import Bloglayout from '../../layouts/bloglayout.astro';
import PostPreview from '../../components/post-preview.astro';
const allPosts = Object.values(import.meta.glob('../posts/*.md', { eager: true }));
---
<Bloglayout>
  <div>
    {allPosts.map((post: any) => <PostPreview url = {post.url} title = {post.frontmatter.title} date = {post.frontmatter.date} tags = {post.frontmatter.tags} description = {post.frontmatter.description}/>)}
  </div>
  
</Bloglayout>

        
