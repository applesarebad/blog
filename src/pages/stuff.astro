---
import '../styles/global.css';
import Bloglayout from '../layouts/bloglayout.astro';
import WorkPreview from '../components/work-preview.astro';
const allPosts = Object.values(import.meta.glob('./stuff/*.md', { eager: true }));
---
<style>
    h1{
        color: darkmagenta
    }
    .posts-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr); /* 2 cards per row */
        gap: 2rem; /* spacing between cards */
        margin: 2rem 5%;
    }
</style>
<Bloglayout>
  <div class="posts-grid">
    
    {allPosts.map((post: any) => <WorkPreview url = {post.url} title = {post.frontmatter.title} date = {post.frontmatter.date} tags = {post.frontmatter.tags} description = {post.frontmatter.description}/>)}
  </div>
  
</Bloglayout>

        
