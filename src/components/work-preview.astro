---
const {title, url, description} = Astro.props;
import TagCell from "./tag-cell.astro";

---

<style>
    a{
        text-decoration: none;
        display: block;
        
    }
    h2{
        font-size: 1.5rem;
        margin: 0;
        margin-left: 5%;
        padding: 0;
        color: rgb(119, 0, 91);
        
    }
    h4{
        font-size: 1rem;
        margin: 0;
        margin-right: 5%;
        padding: 0;
        color: rgb(174, 79, 152);
        font-weight: normal;
        
    }
    p{
        margin: 0;
        flex: 3;
        padding: 0;
        text-decoration: none;
        color: rgb(119, 0, 91);
        word-break: break-word;
        max-width: 100%;
    }
    .post {
        margin-bottom 5%;
        background-color: rgb(255, 219, 245);
        border-radius: 10px;
        box-shadow: 3px 3px 3px rgb(255, 180, 236);
        transition: background-color 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
        height: 200px;
}
    .post:hover {
        background-color: #ffe7fb;
        transform: translateY(-3px);
        box-shadow: 5px 5px 10px rgba(255, 180, 236, 0.6);
    }
    .rowone {
        display: flex;
        width: 100%;
        justify-content: space-between;
        align-items: center;
        

    }
    .tags {
        flex-wrap: wrap;
        justify-content: left;
        margin-left: 5%;
        margin-top: 1%;
        gap: 0.5rem 0.25rem;
        width:100%;
    }
</style>


<a href = {url}>
    <div class = 'post' onclick={`location.href='${url}'`}>
        <br>
        <div class = 'rowone'>
            <h2>{title}</h2>
        </div>
        

        <div class = 'tags'>
            <h4>{description}</h4>
        </div>
        
        <br>

    </div>
    <br>
</a>
