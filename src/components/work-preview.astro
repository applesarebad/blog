---
// WorkPreview.astro
const { title, url, tags, description } = Astro.props;
import TagCell from "./tag-cell.astro";
---

<style>
a {
  text-decoration: none;
  display: contents;
}

.post {
  background-color: rgb(255, 219, 245);
  border-radius: 10px;
  box-shadow: 3px 3px 3px rgb(255, 180, 236);
  transition: background-color 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;

  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding: 1.25rem;
  box-sizing: border-box;
  min-height: 200px;            
  height: 200px;              
  margin-bottom: 5%;
}

.post:hover {
  background-color: #ffe7fb;
  transform: translateY(-3px);
  box-shadow: 5px 5px 10px rgba(255, 180, 236, 0.6);
}

.rowone {
  display: flex;
  width: 100%;
  justify-content: space-between;
  align-items: center;
}

h2 {
  font-size: 1.5rem;
  margin: 0;
  padding: 0;
  color: rgb(119, 0, 91);
}

h4 {
  font-size: 1rem;
  margin: 0.5rem 0 0 0;
  padding: 0;
  color: rgb(174, 79, 152);
  font-weight: normal;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
  margin-top: 0.75rem;
}
</style>

<a href={url}>
  
  <div class="post">
    <div class="rowone">
      <h2>{title}</h2>
    </div>

    <div class="tags">
      {tags.map((tag_: any) => <TagCell tag = {tag_} />)}
    </div>

    <h4>{description}</h4>
  </div>
</a>